<!-- create -->
  <div class="form-container">
    <h1>Create  Booking</h1>
    <form method="post" action="./create">

      
     
     
        <input type="hidden" id="*" name="User_id"  value="<%= User_id %>">
      
      
      <label for="*">Type Room</label>
      <select name="Type_id" id="">
        <% for (var i = 0; i < type_data.length; i++) {  %>
          <option value="<%= type_data[i].Type_id %>"><%= type_data[i].Type_Name %></option>
        <% } %>
      </select>
      <label for="*">RoomID</label>

      <select name="Room_id" id="">
        <% for (var i = 0; i < room_data.length; i++) { 
          %>
          <option  value="<%= room_data[i].Room_id %>"><%= room_data[i].Room_id %></option>
        <% } %>
      </select>

     
      <label for="*">checkin</label>
      <input type="date" id="*" name="date_checkin" >

      <label for="*">checkout</label>
      <input type="date" id="*" name="date_checkout">

      <label for="*"></label>

      <button type="submit" id="*">Save</button>

    </form>

  </div>
